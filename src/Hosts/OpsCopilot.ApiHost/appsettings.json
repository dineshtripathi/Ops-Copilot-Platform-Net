{
  // ── Logging ──────────────────────────────────────────────────────────────────
  // Production defaults. Override per-environment in appsettings.{env}.json
  // or at runtime via Logging__LogLevel__Default env var.
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },

  "AllowedHosts": "*",

  // ── Azure Key Vault ──────────────────────────────────────────────────────────
  // Set KeyVault:VaultUri to enable the Key Vault configuration provider.
  // Leave empty (or absent) to skip Key Vault — normal for local dev.
  //
  // Example:  "https://kv-opscopilot-dev.vault.azure.net/"
  //
  // In Container Apps, inject via app setting (not committed here):
  //   az containerapp update --set-env-vars KeyVault__VaultUri=https://...
  "KeyVault": {
    "VaultUri": ""
  },

  // ── MCP KQL server ───────────────────────────────────────────────────────────
  // Configuration for the McpHost child process (OpsCopilot.McpHost).
  // McpStdioKqlToolClient reads this section; backward-compatible env vars
  // MCP_KQL_SERVER_COMMAND and MCP_KQL_TIMEOUT_SECONDS are also honoured.
  //
  // Default (local dev): dotnet run from solution root.
  // Production Container Apps: override ServerCommand to the published DLL path.
  //   MCP_KQL_SERVER_COMMAND=dotnet /app/OpsCopilot.McpHost.dll
  "McpKql": {
    "ServerCommand": "dotnet run --project src/Hosts/OpsCopilot.McpHost/OpsCopilot.McpHost.csproj",
    "TimeoutSeconds": 90
  }

  // ── Secrets (DO NOT add here) ────────────────────────────────────────────────
  // The following values are secrets and must NOT appear in this file:
  //
  //   WORKSPACE_ID           — Log Analytics workspace GUID
  //   SQL_CONNECTION_STRING  — Azure SQL connection string
  //
  // Local dev:   dotnet user-secrets set "WORKSPACE_ID" "<guid>"
  //              dotnet user-secrets set "SQL_CONNECTION_STRING" "Server=..."
  //
  // Azure:       Store in Key Vault and set KeyVault:VaultUri above.
  //              Key Vault secret names map directly to config keys
  //              (Key Vault uses -- as the section separator; see docs/).
}
