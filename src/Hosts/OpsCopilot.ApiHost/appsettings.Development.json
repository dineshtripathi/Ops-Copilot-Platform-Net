  // ── Development overrides ─────────────────────────────────────────────────
  // This file is safe to commit — it contains no secrets.
  // Secrets (WORKSPACE_ID, SQL_CONNECTION_STRING) live in User Secrets only.
  //
  // Run once to initialise User Secrets:
  //   cd src/Hosts/OpsCopilot.ApiHost
  //   dotnet user-secrets set "WORKSPACE_ID"          "6b530cc6-14bb-4fad-9577-3a349209ae1c"
  //   dotnet user-secrets set "SQL_CONNECTION_STRING" "Server=(localdb)\mssqllocaldb;Database=OpsCopilot;Trusted_Connection=True"
  //
  // Optional — override the McpHost command for a pre-built binary:
  //   dotnet user-secrets set "McpKql:ServerCommand" "dotnet run --project src/Hosts/OpsCopilot.McpHost/OpsCopilot.McpHost.csproj"

  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information",
      "OpsCopilot": "Debug"
    }
  }

  // KeyVault:VaultUri intentionally omitted — Key Vault is disabled in Development.
